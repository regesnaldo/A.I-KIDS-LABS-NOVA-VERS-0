# Configuração do Servidor
PORT=5001
NODE_ENV=development

# Configuração de Banco de Dados
# Defina como 'true' para usar MongoDB real, ou 'false' para usar arquivos JSON locais (Mock)
USE_MONGODB=false
MONGODB_URI=mongodb://localhost:27017/ai-kids-labs

# Segurança e Autenticação
# Chave secreta para assinar tokens JWT (em produção, use uma string longa e aleatória)
JWT_SECRET=minha_chave_secreta_super_segura_123

# Configuração de Logging
LOG_LEVEL=debug
